<phoneNavigation:PhoneApplicationPage 
    x:Class="Hanoi.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phoneNavigation="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Navigation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="480"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" SupportedOrientations="Landscape" Loaded="PhoneApplicationPage_Loaded">
	<phoneNavigation:PhoneApplicationPage.Resources>
		<Style x:Key="ListBoxStyle1" TargetType="ListBox">
			<Setter Property="Padding" Value="1"/>
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}"/>
			<Setter Property="HorizontalContentAlignment" Value="Left"/>
			<Setter Property="VerticalContentAlignment" Value="Top"/>
			<Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
			<Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
			<Setter Property="BorderBrush" Value="{StaticResource PhoneForegroundBrush}"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="ListBox">
						<Grid>
							<ScrollViewer x:Name="ScrollViewer" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Foreground="{TemplateBinding Foreground}" Margin="1" Padding="{TemplateBinding Padding}">
								<ItemsPresenter Opacity="0.795"/>
							</ScrollViewer>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</phoneNavigation:PhoneApplicationPage.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitleGrid is the name of the application and page title-->

        <!--TitleGrid is the name of the application and page title-->
        <Grid x:Name="TitleGrid" Margin="0,0,-1,0"/>

        <!--ContentGrid is empty. Place new content here-->
        <Grid x:Name="ContentGrid" Grid.Row="1" Margin="1,0,-1,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="75" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="435*" />
                <ColumnDefinition Width="365" />
            </Grid.ColumnDefinitions>
            <Image Source="main_bg.jpg" Stretch="Fill" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
            <Rectangle Fill="#99000000" Margin="8,-8,-12,8" Stroke="#8AFFFFFF" Grid.Row="1" d:LayoutOverrides="GridBox" StrokeThickness="10"/>
            <Button Content="New Game" Height="78" HorizontalAlignment="Left" Margin="20,22,0,0" x:Name="buttonStart" VerticalAlignment="Top" Width="193" Click="buttonStart_Click" BorderThickness="10" BorderBrush="#8DFFFFFF" Foreground="#D8FFFFFF" Grid.Row="1" d:LayoutOverrides="HorizontalAlignment" />
            <TextBlock Height="36" Margin="32,104,213,0" x:Name="textBlock1" Text="Choose a Level:" VerticalAlignment="Top" FontSize="26" CacheMode="BitmapCache" Grid.Row="1" Foreground="#D7FFFFFF" />
            <Button Content="1" Height="85" HorizontalAlignment="Left" Margin="20,140,0,0" x:Name="button2" VerticalAlignment="Top" Width="89" Click="buttonLevel_Click" Grid.Row="1" BorderThickness="10" Foreground="#D7FFFFFF" BorderBrush="#8CFFFFFF" />
            <Button Content="2" Height="85" HorizontalAlignment="Left" Margin="100,140,0,0" x:Name="button3" VerticalAlignment="Top" Width="89" Click="buttonLevel_Click" Grid.Row="1" BorderThickness="10" Foreground="#D7FFFFFF" BorderBrush="#8CFFFFFF" />
            <Button Content="3" Height="85" HorizontalAlignment="Left" Margin="182,140,0,0" x:Name="button4" VerticalAlignment="Top" Width="89" Click="buttonLevel_Click" Grid.Row="1" BorderThickness="10" Foreground="#D7FFFFFF" BorderBrush="#8CFFFFFF" />
            <Button Content="4" Height="85" HorizontalAlignment="Left" Margin="263,140,0,0" x:Name="button5" VerticalAlignment="Top" Width="89" Click="buttonLevel_Click" Grid.Row="1" BorderThickness="10" Foreground="#D7FFFFFF" BorderBrush="#8CFFFFFF" />
            <Button Content="6" Height="85" HorizontalAlignment="Left" Margin="20,216,0,0" x:Name="button6" VerticalAlignment="Top" Width="89" Click="buttonLevel_Click" Grid.Row="1" BorderThickness="10" Foreground="#D7FFFFFF" BorderBrush="#8CFFFFFF" />
            <Button Content="7" Height="85" HorizontalAlignment="Left" Margin="100,216,0,0" x:Name="button7" VerticalAlignment="Top" Width="89" Click="buttonLevel_Click" Grid.Row="1" BorderThickness="10" Foreground="#D7FFFFFF" BorderBrush="#8CFFFFFF" />
            <Button Content="8" Height="85" HorizontalAlignment="Left" Margin="182,216,0,0" x:Name="button8" VerticalAlignment="Top" Width="89" Click="buttonLevel_Click" Grid.Row="1" BorderThickness="10" Foreground="#D7FFFFFF" BorderBrush="#8CFFFFFF" />
            <Button Content="9" Height="85" HorizontalAlignment="Left" Margin="263,216,0,0" x:Name="button9" VerticalAlignment="Top" Width="89" Click="buttonLevel_Click" Grid.Row="1" BorderThickness="10" Foreground="#D7FFFFFF" BorderBrush="#8CFFFFFF" />
            <Button Content="5" Height="85" HorizontalAlignment="Left" Margin="346,140,0,0" x:Name="button10" VerticalAlignment="Top" Width="89" Click="buttonLevel_Click" Grid.Row="1" BorderThickness="10" Foreground="#D7FFFFFF" BorderBrush="#8CFFFFFF" />
            <Button Content="10" Height="85" HorizontalAlignment="Left" Margin="346,216,0,0" x:Name="button11" VerticalAlignment="Top" Width="89" Click="buttonLevel_Click" Grid.Row="1" BorderThickness="10" Foreground="#D7FFFFFF" BorderBrush="#8CFFFFFF" />
            <TextBlock Grid.Column="1" Height="44" HorizontalAlignment="Left" Margin="29,23,0,0" x:Name="textBlock2" Text="High Scores" VerticalAlignment="Top" Width="336" CacheMode="BitmapCache" FontSize="32" FontWeight="Bold" Foreground="#D7FFFFFF" />
            <ListBox x:Name="lbHighScores" Grid.Column="1" Height="405" HorizontalAlignment="Right" Margin="0,-8,8,0" VerticalAlignment="Top" Width="332" Loaded="lbHighScores_Loaded" FontSize="16" BorderThickness="10" BorderBrush="#8CFFFFFF" Style="{StaticResource ListBoxStyle1}" Background="#97000000" Grid.Row="1" IsEnabled="True" SelectionChanged="lbHighScores_SelectionChanged" />
            <TextBlock Margin="8,0,31,0" TextWrapping="Wrap" Text="Towers of Hanoi" FontSize="48" FontWeight="Bold" Height="63" VerticalAlignment="Top" Foreground="#D6FFFFFF"/>
            <Button Content="Continue..." Height="78" HorizontalAlignment="Left" Margin="217,22,0,0" x:Name="buttonStart_Copy" VerticalAlignment="Top" Width="193" Click="buttonStart_Click" BorderThickness="10" BorderBrush="#8DFFFFFF" Foreground="#D8FFFFFF" Grid.Row="1" IsEnabled="False" />
            <HyperlinkButton Content="Check out our other Games" Grid.Row="1" Height="30" HorizontalAlignment="Left" Margin="32,353,0,0" Name="hyperlinkButton1" VerticalAlignment="Top" Width="239" CacheMode="BitmapCache"/>
            <TextBlock Grid.Row="1" Height="51" HorizontalAlignment="Left" Margin="32,302,0,0" Name="textBlock3" Text="To play move the discs from left to right.  Smaller discs on top of larger discs. Try for fewer moves in less time. " VerticalAlignment="Top" Width="395" TextWrapping="Wrap" FontSize="16" CacheMode="BitmapCache"/>
        </Grid>
    </Grid>
    
</phoneNavigation:PhoneApplicationPage>
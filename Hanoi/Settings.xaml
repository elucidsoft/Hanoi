	<phone:PhoneApplicationPage.FontFamily>
		<StaticResource ResourceKey="PhoneFontFamilyNormal"/>
	</phone:PhoneApplicationPage.FontFamily>
	<phone:PhoneApplicationPage.FontSize>
		<StaticResource ResourceKey="PhoneFontSizeNormal"/>
	</phone:PhoneApplicationPage.FontSize>
	<phone:PhoneApplicationPage.Foreground>
		<StaticResource ResourceKey="PhoneForegroundBrush"/>
	</phone:PhoneApplicationPage.Foreground>

    <ScrollViewer>

		<Grid Height="950" Width="800">
<!--TitlePanel contains the name of the application and page title-->
			<StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="18,21,6,0" Height="116" VerticalAlignment="Top">
				<TextBlock x:Name="ApplicationTitle" Text="SETTINGS" Style="{StaticResource PhoneTextNormalStyle}"/>
				<TextBlock x:Name="PageTitle" Text="HANOI " Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}"/>
			</StackPanel>
			<Grid x:Name="ContentPanel" Margin="6,141,6,0" Height="910" VerticalAlignment="Top">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="0.553*"/>
					<ColumnDefinition Width="0.447*"/>
				</Grid.ColumnDefinitions>
				<Grid Grid.ColumnSpan="2" Height="120" Margin="0,128,0,0" VerticalAlignment="Top">
					<Slider Value="100" Maximum="100" LargeChange="25" SmallChange="1" RenderTransformOrigin="0.47,0.422" Style="{StaticResource SliderStyle1}" HorizontalAlignment="Right" Width="222" Margin="0,0,25,0"/>
					<TextBlock Margin="13,8,0,0" TextWrapping="Wrap" Text="Sound Volume" FontSize="18.667" d:LayoutOverrides="GridBox" FontFamily="Segoe WP" HorizontalAlignment="Left" Width="270" Height="32" VerticalAlignment="Top" Foreground="{StaticResource PhoneBorderBrush}"/>
					<TextBlock Margin="13,38,0,8" TextWrapping="Wrap" Text="100%" FontSize="29.333" HorizontalAlignment="Left" Width="92" FontFamily="Segoe WP SemiLight"/>
				</Grid>
				<Button Content="Clear High Scores" Margin="0,0,156,102" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" Height="80" x:Name="btnClearHighScores" Click="btnClearHighScores_Click" />
				<toolkit:ToggleSwitch Header="Play Sounds" Margin="0,8,0,0" VerticalAlignment="Top" Height="120" Grid.ColumnSpan="2" FontSize="32" IsChecked="True"/>
				<toolkit:ToggleSwitch Header="Show Title Bar" Margin="0,248,0,0" Grid.ColumnSpan="2" FontSize="32" IsChecked="True" Height="120" VerticalAlignment="Top"/>
				<toolkit:ToggleSwitch Header="Show Move Counter" Margin="0,368,0,422" Grid.ColumnSpan="2" FontSize="32" IsChecked="True"/>
				<toolkit:ToggleSwitch Header="Show Timer" Margin="0,0,0,302" Grid.ColumnSpan="2" FontSize="32" IsChecked="True" Height="120" VerticalAlignment="Bottom"/>
				<toolkit:ToggleSwitch Header="Show Level" Margin="0,0,0,182" Grid.ColumnSpan="2" FontSize="32" IsChecked="True" Height="120" VerticalAlignment="Bottom"/>
			</Grid>
		</Grid>

	</ScrollViewer>

</phone:PhoneApplicationPage>
